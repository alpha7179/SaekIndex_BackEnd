# MongoDB Atlas 연결 설정
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/your_database?retryWrites=true&w=majority&appName=SaekIndex01

# 데이터베이스명
DB_NAME=saekinDB

# 서버 설정
PORT=4000
NODE_ENV=development

# Redis 설정 (로컬 Redis 사용)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Python 감정 분석 서버
EMOTION_SERVER_PORT=5001
MEDIAPIPE_DISABLE_GPU=1

# CORS 설정 (프로덕션)
CORS_ORIGINS=https://your-cloudfront-domain.cloudfront.net

# 로깅
LOG_LEVEL=info

# Sentry (선택사항)
SENTRY_DSN=

# 데이터베이스 연결 풀 설정 (t2.micro 최적화)
DB_MAX_POOL_SIZE=5
DB_MIN_POOL_SIZE=1
DB_SERVER_TIMEOUT=10000
DB_SOCKET_TIMEOUT=45000
DB_CONNECT_TIMEOUT=10000

# S3 백업 설정 (선택사항)
S3_BACKUP_BUCKET=saekindex-backups

# 보안 설정 (향후 사용)
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long
API_SECRET_KEY=your_api_secret_key_for_future_authentication
