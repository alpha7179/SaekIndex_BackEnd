{
  "name": "saekindex-backend",
  "version": "1.0.0",
  "description": "SaekIndex 감정 분석 및 시각화 프로젝트 백엔드 API",
  "private": true,
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "NODE_ENV=development nodemon server.js",
    "start": "cross-env NODE_ENV=production node server.js",
    "start:dev": "NODE_ENV=development node server.js",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --watch --runInBand --detectOpenHandles",
    "test:coverage": "NODE_ENV=test jest --coverage --runInBand --detectOpenHandles",
    "test:ci": "NODE_ENV=test jest --runInBand --detectOpenHandles --ci --coverage --watchAll=false",
    "migrate": "node scripts/migrate-survey-data.js",
    "migrate:fix-isviewed": "node scripts/fix-missing-isviewed.js",
    "db:check": "node scripts/check-schema.js",
    "db:health": "node -e \"require('./src/config/db').checkDatabaseHealth().then(console.log)\"",
    "lint": "echo 'ESLint configuration needed'",
    "lint:fix": "echo 'ESLint fix configuration needed'",
    "format": "echo 'Prettier configuration needed'",
    "validate": "npm run lint && npm run test:ci",
    "build": "echo 'No build step required for Node.js'",
    "deploy": "npm run validate && npm run start",
    "logs": "tail -f logs/app.log",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "docs": "echo 'API documentation: README.md'",
    "postinstall": "echo 'Dependencies installed successfully'"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "mongoose",
    "rest-api",
    "survey",
    "emotion-analysis",
    "visualization"
  ],
  "author": {
    "name": "SaekIndex Team",
    "email": "contact@saekindex.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/saekindex-backend.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/saekindex-backend/issues"
  },
  "homepage": "https://github.com/your-username/saekindex-backend#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "mongoose": "^8.18.2"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.1",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/db.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "verbose": true,
    "forceExit": true,
    "detectOpenHandles": true
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "server.js"
    ],
    "ext": "js,json",
    "ignore": [
      "tests/",
      "coverage/",
      "node_modules/"
    ],
    "delay": 1000,
    "env": {
      "NODE_ENV": "development"
    }
  }
}
